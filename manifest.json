{
  "name": "Junker",
  "version": "0.1",
  "manifest_version": 2,
  "description":
    "Clean up FB feed.",
  "icons": {"48": "icon48.png", "72": "icon72.png", "128": "icon128.png"},
  "permissions": [
    "contextMenus",
    "cookies",
    "idle",
    "notifications",
    "unlimitedStorage",
    "http://*.facebook.com/*",
    "https://*.facebook.com/*"
  ],
  "options_page": "options.html",
  "background": {
    "scripts": ["backend.js", "message_storage.js"]
  },
  "content_scripts": [{
    "matches": ["http://*.facebook.com/*", "https://*.facebook.com/*"],
	"css": ["style.css"],
    "js": ["./jquery.min.js",
           "./stopwords_pt-br.js",
           "./tokenizer.js",
           "./underscore.js",
           "./require.js",
           "./bayesian.js",
           "./parser.js",
           "./backend.js",
           "./classifier.js",
           "./content.js"
            ],

    "run_at": "document_end"
  }]
}
